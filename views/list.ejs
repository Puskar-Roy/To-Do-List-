<button> <i class="fa-solid fa-plus"></i> </button>

    </form>



    <div class="ans">    
        <ul>
                <% for(var i = 0;i<name.length;i++){ %>
                <li> <input type="checkbox" name="check" id="chk"> <%=name[i]%></li>
                <% } %>
        </ul>
    </div>

</div>

</section>
