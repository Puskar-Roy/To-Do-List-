    <style>
        @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@800&family=Raleway:wght@900&family=Roboto:wght@300;400&family=Secular+One&display=swap');
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .gradient-background {
  background: linear-gradient(163deg,#224cd2,#dd23ae,#d348d6);
  background-size: 180% 180%;
  animation: gradient-animation 3s ease infinite;
  /* min-height: 100vh; */
  min-height: 600px;
  /* width: 900px; */
  overflow-x: hidden; 
}

@keyframes gradient-animation {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
  h1{
    /* font-family: 'Open Sans', sans-serif;
